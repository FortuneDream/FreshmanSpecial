<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="113dp">
    <ImageView
        android:id="@+id/iv_fg_info_small_pic"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:src="#000"
        android:scaleType="centerCrop"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"

        />
    <TextView
        android:id="@+id/tv_fg_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="四人间（旧）"
        android:layout_marginTop="15.5dp"
        android:maxLength="13"
        android:singleLine="true"
        android:textSize="15.5sp"
        android:textColor="#353537"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_fg_info_small_pic"
        android:layout_toEndOf="@+id/iv_fg_info_small_pic" />
    <TextView
        android:id="@+id/tv_fg_info_content_title_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="楼栋："
        android:layout_marginTop="14dp"
        android:textSize="12.5sp"
        android:textColor="#444444"
        android:layout_below="@+id/tv_fg_info_title"
        android:layout_alignStart="@+id/tv_fg_info_title"
        android:layout_alignLeft="@+id/tv_fg_info_title"/>
    <TextView
        android:id="@+id/tv_fg_info_content_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#d9d9db"
        android:text="1、5、6栋"
        android:textSize="12.5sp"
        android:layout_marginRight="15dp"
        android:singleLine="true"
        android:maxLength="25"
        android:ellipsize="end"
        android:layout_alignTop="@+id/tv_fg_info_content_title_s"
       android:layout_toRightOf="@+id/tv_fg_info_content_title_s" />
    <TextView
        android:id="@+id/tv_fg_info_content_title_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="配置："
        android:textColor="#444444"
        android:textSize="12.5sp"
        android:layout_marginTop="4dp"
        android:maxLines="2"
        android:maxLength="25"
        android:ellipsize="end"
        android:layout_below="@+id/tv_fg_info_content_s"
        android:layout_alignStart="@+id/tv_fg_info_content_title_s"
        android:layout_alignLeft="@+id/tv_fg_info_content_title_s" />
    <TextView
        android:id="@+id/tv_fg_info_content_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#d9d9db"
        android:text="公共卫生间 卫生间 洗漱间 空调 洗衣机 公共卫生间 卫生间 洗漱间 空调 洗衣机"
        android:layout_marginRight="15dp"
        android:textSize="12.5sp"
        android:maxLines="2"
        android:maxLength="25"
        android:ellipsize="end"
        android:layout_alignTop="@+id/tv_fg_info_content_title_big"
        android:layout_toRightOf="@+id/tv_fg_info_content_title_big" />
    <ImageView
        android:id="@+id/iv_news_item_divider"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ccc"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>