<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dormitory_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <com.excitingboat.freshmanspecial.utils.RoundRectImageView
            android:id="@+id/picture_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:roundDegree="@dimen/default_margin" />

        <TextView
            android:id="@+id/dormitory_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        />

        <com.excitingboat.freshmanspecial.utils.RoundRectImageView
            android:id="@+id/picture_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:roundDegree="@dimen/default_margin" />

        <TextView
            android:id="@+id/dormitory_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <com.excitingboat.freshmanspecial.utils.RoundRectImageView
            android:id="@+id/picture_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:roundDegree="@dimen/default_margin" />

        <TextView
            android:id="@+id/dormitory_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
</ScrollView>