<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <ImageView
        android:id="@+id/iv_fg_info_small_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/test"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/tv_fg_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_fg_info_small_pic"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toEndOf="@+id/iv_fg_info_small_pic"
        android:layout_toRightOf="@+id/iv_fg_info_small_pic"
        android:maxLength="13"
        android:singleLine="true"
        android:text="纸上烤肉"
        android:textColor="#000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_fg_info_content_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_fg_info_title"
        android:layout_alignStart="@+id/tv_fg_info_title"
        android:layout_below="@+id/tv_fg_info_title"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLength="25"
        android:singleLine="true"
        android:text="简介：好吃不贵" />

    <TextView
        android:id="@+id/tv_fg_info_content_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_fg_info_content_s"
        android:layout_alignStart="@+id/tv_fg_info_content_s"
        android:layout_below="@+id/tv_fg_info_content_s"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLength="25"
        android:maxLines="2"
        android:text="位置：新校门十字路口右边五十米，新世纪百货超市旁" />

    <include
        android:id="@+id/iv_news_item_divider"
        layout="@layout/default_divide"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

</RelativeLayout>